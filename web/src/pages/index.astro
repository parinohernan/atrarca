---
// Componentes y lógica del servidor
// Esta importación debe estar dentro de los --- de Astro
// Intenta importar el Layout desde ./Layout.astro (en la misma carpeta)
import Layout from './Layout.astro';
---

<Layout title="Inicio - Sistema ARCA">
  <h2>Bienvenido al Sistema de Facturación Electrónica ARCA</h2>
  
  <div class="card-container">
    <div class="card">
      <h3>Solicitar CAE</h3>
      <p>Genere comprobantes electrónicos y obtenga CAE de ARCA</p>
      <a href="/solicitar-cae" class="btn">Ir a Solicitar CAE</a>
    </div>
    
    <div class="card">
      <h3>Desde ASTRIAL</h3>
      <p>Procese facturas pendientes desde el sistema ASTRIAL</p>
      <a href="/desde-astrial" class="btn">Ir a Desde ASTRIAL</a>
    </div>
  </div>

  <style>
    .card-container {
      display: flex;
      gap: 2rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }
    
    .card {
      background-color: white;
      border-radius: 8px;
      padding: 1.5rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      flex: 1;
      min-width: 300px;
    }
    
    .card h3 {
      margin-top: 0;
      color: #2c3e50;
    }
    
    .btn {
      display: inline-block;
      background-color: #3498db;
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      text-decoration: none;
      margin-top: 1rem;
    }
    
    .btn:hover {
      background-color: #2980b9;
    }
  </style>
</Layout> 