---
interface Props {
  title?: string;
}

const { title = 'Facturación Electrónica' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sistema de facturación electrónica" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <!-- Asegúrate de incluir Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <header class="bg-white shadow py-4">
      <div class="container mx-auto px-4 flex justify-between items-center">
        <h1 class="text-xl font-semibold text-blue-600">Sistema de Facturación</h1>
        <nav>
          <a href="/" class="text-gray-600 hover:text-blue-600 mr-4">Inicio</a>
          <a href="/desde-astrial" class="text-gray-600 hover:text-blue-600">Desde Astrial</a>
        </nav>
      </div>
    </header>
    
    <main class="py-6">
      <slot />
    </main>
    
    <footer class="bg-white shadow-inner py-4 mt-8">
      <div class="container mx-auto px-4 text-center text-gray-500 text-sm">
        &copy; {new Date().getFullYear()} Sistema de Facturación Electrónica
      </div>
    </footer>
  </body>
</html> 